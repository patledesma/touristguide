<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gray_gradient"
    tools:context="com.sulkud.touristguide.activity.SplashActivity">

    <FrameLayout
        android:id="@+id/timerTile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/circular_progress_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="500"
            android:padding="10dp"
            android:progress="500"
            android:progressDrawable="@drawable/circular_progress_bg"
            android:rotation="-90" />

        <ProgressBar
            android:id="@+id/circular_progress_fg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="500"
            android:progress="500"
            android:progressDrawable="@drawable/circular_progress_fg"
            android:rotation="-90" />

        <ImageView
            android:id="@+id/iLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/sulkud"
            android:padding="45dp"/>

    </FrameLayout>

</RelativeLayout>
